 <!--...

 First line in a view has a model.
 Deals with Jokes 
 IEnumerable -> a list or list of jokes in this case

 -->
@model IEnumerable<WebApplicationMVC.Models.Joke>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                 <!-- -->
                @Html.DisplayNameFor(model => model.JokeQuestion)
            </th>
            
          
        </tr>



    </thead>
    <tbody>
         <!-- for each loop that shows each row in the table -->
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JokeQuestion)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Answer</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
